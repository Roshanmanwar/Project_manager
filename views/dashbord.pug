doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Document
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js", integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p", crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js", integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF", crossorigin="anonymous")
		script(src="/js/product.client.js")

	body 
		section.container-fluid
				.modal.fade(tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false")#addNewProduct
						.modal-dialog
							.modal-content
								.modal-header
									h5.modal-title Modal title
									button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
								.modal-body
									form()
										.mb-3
											label.form-label(for="productName") ProductName
											input.form-control#productName(type="text")
										.mb-3
											label.form-label(for="qty") Qty
											input.form-control#qty(type="text")
										.mb-3
											label.form-label(for="price") price
											input.form-control#price(type="Number")
										.mb-3
											label.form-label(for="mdate") Mng Date
											input.form-control#mdate(type="date")

										div.text-center
											button.btn.btn-primary.m-2#btnSave(type="button") Submit
											button.btn.btn-primary(type="reset") Reset						 
						 
				section.row
					section.col-10.border-bottom.border-2.d-flex.justify-content-between.p-4 
						p.h4.mb-0 Welcome #{login.user.name.split(' ')[0]}
						a.btn.btn-danger.btn-sm(href='/log-out') logout
				section.row
					section.col-10.m-auto
						h4.mt-4.text-center.text-primary Product Page 
						button.btn.btn-primary(data-bs-toggle="modal" data-bs-target='#addNewProduct') Add +
							
						table.table.table-bordered.mt-4
								thead
									tr
										th(width="10%") Sr.no
										th(width="30%") Name
										th(width="20%") Quantity
										th(width="25%") Cost
										th(width="20%") Action

								tbody#tbody
									