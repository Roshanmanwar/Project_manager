		section.container-fluid
			section.row
				section.col-4.m-3.p-3.border.border-4
					if(message !== "")
						#message
							.alert.alert-primary(role="alert") #{message}
						script.	
							let message='#{message}';
								if(message !=="")
								{
									setTimeout(()=>{
										document.getElementById('message').innerHTML=""
									},2000)
								}

					form(action='/save' method="post")
